---
import { getCollection } from "astro:content";
import LetsTalk from "~/components/inputs/LetsTalk.astro";
import Header, { HeaderVariant } from "~/components/nav/Header.astro";
import Layout from "~/layouts/Layout.astro";

const [index] = await getCollection("privacy");
const { Content } = await index.render();
---

<Layout>
  {
    index.data.header && (
      <Header variant={HeaderVariant.Fixed} items={index.data.header.ref} />
    )
  }

  <Content />
  <LetsTalk />
</Layout>
