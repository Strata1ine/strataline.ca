---
import { Icon } from "astro-icon/components";

const { slug } = Astro.params;
---

<button
  class="text-accent-dark mb-1 flex cursor-pointer items-end gap-3"
  onclick={slug
    ? `window.location.href = '/#${slug}'`
    : `window.location.href = '/'`}
>
  <Icon name="ph:house-line-fill" class="h-auto w-8 sm:w-9 xl:w-12" />
  <span class="mb-1 font-sans text-base leading-none font-bold">Go Back</span>
</button>
