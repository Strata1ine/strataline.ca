---
import clsx from "clsx";
import { Icon } from "astro-icon/components";

const {
  slug,
  description = "Go home",
  class: customClass,
  ...slot
} = Astro.props;
---

<button
  class={clsx(
    `text-accent-dark flex cursor-pointer items-end gap-3`,
    customClass,
  )}
  {...slot}
  onclick={slug
    ? `window.location.href = '/#${slug}'`
    : `window.location.href = '/'`}
>
  <Icon name="ph:house-line-fill" class="h-auto w-8 sm:w-9 xl:w-12" />
  <span class="font-sans text-base leading-none font-bold xl:mb-1"
    >{description}</span
  >
</button>
