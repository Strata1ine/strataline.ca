---
import clsx from "clsx";
const { class: className, i, variant = DotVariant.Big, ...rest } = Astro.props;

export enum DotVariant {
  Small,
  Big,
}

export const dotMap = {
  [DotVariant.Small]: "w-3 h-3 xl:h-6 xl:w-6 [&.active]:border-3",
  [DotVariant.Big]: "w-4 h-2 xl:h-10 xl:w-10 [&.active]:border-5",
};
---

<button
  class={clsx(
    `cursor-pointer rounded-[50%] border-[1.4px] border-black transition-[border] duration-250 border-solid`,
    className,
    dotMap[variant],
  )}
  aria-label={i != null ? `Navigate to Slide ${i}` : ""}
  {...rest}
>
</button>
