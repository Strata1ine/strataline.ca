---
import Star from "../assets/star.svg";
const {
  text = [
    "Made with love",
    "No scrape of dust left",
    "Absolutely revelatory",
    "Expert opinions",
  ],
  speed,
  ...slot
} = Astro.props;
---

<div class="py-inset border-accent overflow-hidden border-y-2" {...slot}>
  <div data-carousel data-carousel-speed={speed} class="flex flex-nowrap gap-12 sm:gap-15 md:gap-25 items-center">
    {
      text.map((text: string) => (
          <h5 class="font-serif text-3xl whitespace-nowrap">{text}</h5>
          <Star class="flex-shrink-0 w-8 h-8" />
      ))
    }
  </div>
</div>
