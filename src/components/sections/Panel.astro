---
import Container, { ContainerVariant } from "~/components/div/Container.astro";
import ContainerTitle from "~/components/div/ContainerTitle.astro";
import { Pos } from "~/components/variants.ts";

const { title, variant = Pos.Left, ...slot } = Astro.props;
---

<Container variant={ContainerVariant.Outer} {...slot}>
  <ContainerTitle center titlePos={variant} title={title} />
  <div class="flex flex-wrap justify-center gap-6 gap-y-12">
    <slot />
  </div>
</Container>
