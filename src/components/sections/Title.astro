---
import { container, heading, Pos } from "./meta";
import clsx from "clsx";

interface Props {
  title: string;
  pos: Pos;
}

let { title, pos } = Astro.props;
---

<div class={clsx(container({ intent: "inner" }), "mb-16")}>
  <h2
    style="white-space: pre-line"
    class={clsx(
      heading({ intent: "5xl" }),
      "sm:max-w-[20ch]",
      pos == "right" ? "sm:ml-auto  sm:text-right" : "",
    )}
  >
    {title}
  </h2>
</div>
