---
import Container from "~/components/div/Container.astro";
import ContainerTitle from "~/components/div/ContainerTitle.astro";

const { title, titlePos = Astro.locals.getNextPos(), ...slot } = Astro.props;

Astro.locals.nextSwap = titlePos;
---

<Container {...slot}>
  <ContainerTitle title={title} titlePos={titlePos} />
  <div>
    <slot />
  </div>
</Container>
