---
import Container, { ContainerVariant } from "~/components/div/Container.astro";
import { Pos } from "~/components/variants.ts";
import ContainerTitle from "~/components/div/ContainerTitle.astro";

const { title, description, variant = Pos.Left, ...slot } = Astro.props;
---

<Container title={title} variant={ContainerVariant.Inner} {...slot}>
  <ContainerTitle split even title={title} titlePos={variant}>
    <p class="font-sans text-sm">{description}</p>
  </ContainerTitle>

  <div class="gap-inset grid grid-cols-1 sm:grid-cols-2 sm:gap-8">
    <slot />
  </div>
</Container>
