---
import { type PropsOf } from "./registry";
const meta = Astro.props as PropsOf<"ImagePanel">;

import { Image } from "astro:assets";
import LayoutDivider from "./layout/Divider.astro";
import LayoutTitle from "./layout/Title.astro";
import { containerStyles, headingStyles, imageStyles } from "./styles";
---

<LayoutDivider>
  <LayoutTitle title={meta.title} pos={meta.pos} />

  <div class={containerStyles({ width: "outer" })}>
    <div class="flex flex-wrap justify-center gap-6 gap-y-12 2xl:gap-7">
      {
        meta.content.map((panel, _) => {
          return (
            <div class="flex flex-col items-center gap-3 sm:max-w-1/2 sm:flex-[40%] sm:gap-5 xl:max-w-1/3 xl:flex-[30%]">
              <div class="h-70 rounded-sm contain-paint md:h-95">
                <Image
                  class={imageStyles({})}
                  src={panel.meta}
                  alt={panel.alt}
                  draggable={false}
                />
              </div>

              <h4 class={headingStyles({ size: "2xl" })}>{panel.title}</h4>
            </div>
          );
        })
      }
    </div>
  </div>
</LayoutDivider>
