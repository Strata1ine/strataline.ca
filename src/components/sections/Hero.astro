---
import { optimizeImages } from "@build/images";
import HeroInternal from "./Hero.svelte";

const {
  title,
  description,
  images: rawImages,
}: {
  title: string;
  description: string;
  images: any[];
} = Astro.props;

let images = await optimizeImages(rawImages);
---

<main
  class="relative flex h-svh max-h-200 min-h-160 overflow-x-clip sm:max-h-350 sm:min-h-210"
>
  <div
    class="bg-accent absolute z-[-1] hidden h-full w-1/4 rounded-br-sm sm:block xl:w-(--right-hero-offset)"
  >
  </div>

  <div
    class="2xl:max-w-outer px-inset flex w-full items-center gap-8 xl:gap-11 2xl:mx-auto"
  >
    <HeroInternal client:idle {title} {description} {images} />
  </div>
</main>
