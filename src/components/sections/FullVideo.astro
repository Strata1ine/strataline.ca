---
import Container, { ContainerVariant } from "~/components/div/Container.astro";
import ContainerTitle from "~/components/div/ContainerTitle.astro";
import { Pos } from "~/components/variants";

const {
  title,
  path,
  variant = Pos.Left,
  poster,
  format,
  ...slot
} = Astro.props;
---

<Container variant={ContainerVariant.Inner} {...slot}>
  <ContainerTitle variant={variant} title={title} />
  <video
    width="100%"
    height="100%"
    poster={poster ? poster.src : undefined}
    class="rounded-sm"
    controls
  >
    <source src={path} type={format} />
    Your browser does not support the video tag.
  </video>
</Container>
