---
import Container, { ContainerVariant } from "~/components/div/Container.astro";
import ContainerTitle from "~/components/div/ContainerTitle.astro";
import { Pos } from "~/components/variants.ts";
import M from "~/components/e/Markdown.astro";

const { title, titlePos = Pos.Left, ...slot } = Astro.props;
---

<Container variant={ContainerVariant.Inner} {...slot}>
  <ContainerTitle variant={titlePos} title={title} />
  <M>
    <slot />
  </M>
</Container>
