---
import { containerStyles, headingStyles, Pos } from "@sections/styles";
import clsx from "clsx";

interface Props {
  title: string;
  pos: Pos;
}

let { title, pos } = Astro.props;
---

<div class={clsx(containerStyles({ width: "inner" }), "mb-16")}>
  <h2
    class={clsx(
      headingStyles({ size: "5xl" }),
      "sm:max-w-[20ch]",
      pos == "right" ? "sm:ml-auto  sm:text-right" : "",
    )}
  >
    {title}
  </h2>
</div>
