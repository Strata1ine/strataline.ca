---
import type { Pos } from '@/schemas';
import Container from './Container.astro';

interface Props {
	pos: Pos;
}

const meta = Astro.props;
---

<Container
	width="inner"
	class={[
		'flex sm:flex-row gap-6 md:gap-8 xl:gap-11',
		meta.pos == 'right' ? 'flex-col-reverse' : 'flex-col',
	]}
>
	{meta.pos == 'left' && <slot name="title" />}

	<slot />

	{meta.pos == 'right' && <slot name="title" />}
</Container>
