---
interface Props {
	id?: string;
	spacing?: VariantProps<typeof divisionStyles>['spacing'];
	as?: 'section' | 'footer' | 'main';
}
const { id, spacing, as: Tag = 'section' } = Astro.props;

import { cva, type VariantProps } from 'class-variance-authority';
const divisionStyles = cva('', {
	variants: {
		spacing: {
			top: 'mt-28 xl:mt-38',
			both: 'my-28 xl:my-38',
		},
	},
	defaultVariants: {
		spacing: 'both',
	},
});
---

<Tag class={divisionStyles({ spacing })} {id}>
	<slot />
</Tag>
