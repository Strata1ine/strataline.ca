---
import clsx from "clsx";
import { Icon } from "astro-icon/components";

const {
  slug,
  description = "Go home",
  class: customClass,
  ...slot
} = Astro.props;
---

<a
  class={clsx(
    `text-accent-dark flex cursor-pointer items-end gap-3`,
    customClass,
  )}
  {...slot}
  data-astro-prefetch
  href={slug
    ? `/#${slug}`
    : `/`}
>
  <Icon name="ph:house-line-fill" class="h-auto w-8 sm:w-9 xl:w-12 translate-y-[5%]" />
  <span class="font-sans text-base leading-none font-bold"
    >{description}</span
  >
</a>
