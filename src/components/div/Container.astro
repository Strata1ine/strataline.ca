---
import clsx from "clsx";
export enum ContainerVariant {
  Inner,
  Outer,
  Max,
  Display,
}

export const containerMap = {
  [ContainerVariant.Inner]: "xl:max-w-inner px-inset xl:mx-auto",
  [ContainerVariant.Outer]: "2xl:max-w-outer px-inset 2xl:mx-auto",
  [ContainerVariant.Max]: "max-w-full",
  [ContainerVariant.Display]:
    "max-w-[calc(var(--spacing-outer-span)+30rem)] xl:mx-auto",
};

const {
  as = "section",
  variant = ContainerVariant.Outer,
  class: customClass = "",
  ...slot
} = Astro.props;

// for every section that is uneven swap Pos
const Tag = as;
---

<Tag
  class={clsx(
    customClass,
    containerMap[variant],
    // if its a section, then apply margin bottom by default
    as === "section" && "my-30 sm:my-45",
  )}
  {...slot}
>
  <slot />
</Tag>
