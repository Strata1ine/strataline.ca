---
import clsx from "clsx";
export enum ContainerVariant {
  Inner,
  Outer,
  Screen,
}

export const containerMap = {
  [ContainerVariant.Inner]: "max-w-inner-span px-inset",
  [ContainerVariant.Outer]: "max-w-outer-span px-inset",
  [ContainerVariant.Screen]: "max-w-full",
};

const {
  as = "section",
  variant = ContainerVariant.Outer,
  class: customClass = "",
} = Astro.props;

// for every section that is uneven swap Pos
const Tag = as;
---

<Tag
  as={as}
  class={clsx(
    `lg:mx-auto w-full`,
    containerMap[variant],
    customClass,
    // if its a section, then apply margin bottom by default
    as === "section" && "my-40",
  )}
>
  <slot />
</Tag>
