---
import clsx from "clsx";
export enum ContainerVariant {
  Inner,
  Outer,
  Max,
  Display,
}

export const containerMap = {
  [ContainerVariant.Inner]: "max-w-inner-span px-inset lg:mx-auto w-full",
  [ContainerVariant.Outer]: "max-w-outer-span px-inset lg:mx-auto w-full",
  [ContainerVariant.Max]: "max-w-full lg:mx-auto w-full",
  [ContainerVariant.Display]: "max-w-[calc(var(--spacing-outer-span)+30rem)] lg:mx-auto w-full",
};

const {
  as = "section",
  variant = ContainerVariant.Outer,
  class: customClass = "",
  ...slot
} = Astro.props;

// for every section that is uneven swap Pos
const Tag = as;
---

<Tag
  as={as}
  class={clsx(
    containerMap[variant],
    customClass,
    // if its a section, then apply margin bottom by default
    as === "section" && "my-40",
  )}
  {...slot}
>
  <slot />
</Tag>
