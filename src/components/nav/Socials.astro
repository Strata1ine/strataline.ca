---
import clsx from "clsx";
import { Icon } from "astro-icon/components";

const { imageClass, ...slot } = Astro.props;
const { index } = Astro.locals;
---

<ul {...slot}>
  {
    index.data.business.sameAs &&
      index.data.business.sameAs.map(
        (media: any) =>
          media.social && (
            <li>
              <a
                target="_blank"
                href={media.url}
                rel="noopener noreferrer"
                aria-label={`${media.social.name} Link`}
              >
                <Icon
                  style={`color: #${media.social.color}`}
                  name={`${media.social.icon}`}
                  class={clsx(imageClass)}
                />
              </a>
            </li>
          ),
      )
  }
</ul>
