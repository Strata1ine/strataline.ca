---
import { getCollection } from "astro:content";

import Socials from "~/components/nav/Socials.astro";
import Container, { ContainerVariant } from "~/components/div/Container.astro";

const [index] = await getCollection("index");
const serviceData = await getCollection("services");
---

<Container
  class="border-accent space-y-5 border-t-[1.4px] bg-white"
  as="footer"
  variant={ContainerVariant.Inner}
>
  <div class="space-y-10 py-12">
    {
      index.data.local_business.areaServed && (
        <>
          <h4 class="mb-4 font-serif text-xl font-semibold">
            Municipalities we serve
          </h4>
          <ul class="columns-[10rem] gap-4 space-y-2 sm:gap-12">
            {index.data.local_business.areaServed.map((area, _) => (
              <li class="">
                <a
                  href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(
                    area,
                  )}`}
                  target="_blank"
                  rel="noopener noreferrer nofollow"
                  class="text-url font-sans text-base text-nowrap hover:underline"
                >
                  {area}
                </a>
              </li>
            ))}
          </ul>
        </>
      )
    }

    <div>
      <h4 class="mb-4 font-serif text-xl font-semibold">Our Services</h4>
      <ul class="columns-[10rem] gap-2 space-y-2 sm:gap-12">
        {
          serviceData.map((service: any, _) => (
            <li>
              <a
                href={`/services/${service.slug}`}
                class="text-url font-sans text-base text-nowrap hover:underline"
              >
                {service.data.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div
    class="border-accent py-inset flex flex-col items-center justify-between border-t-[1.4px] md:flex-row"
  >
    <span class="text-bg font-sans"><b>&copy; {index.data.title}</b>. 2025</span
    >

    <Socials class="flex flex-row" imageClass="w-16 xl:w-18 h-auto" />
  </div>
</Container>
