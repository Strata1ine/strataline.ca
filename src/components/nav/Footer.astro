---
import { getCollection } from "astro:content";

import Socials from "~/components/nav/Socials.astro";
import Container, { ContainerVariant } from "~/components/div/Container.astro";

const [index] = await getCollection("index");
---

<Container
  class="py-inset border-accent gap-inset flex flex-col items-center justify-between border-t-[1.4px] bg-white md:flex-row"
  as="footer"
  variant={ContainerVariant.Inner}
>
  <span class="text-bg font-sans"
    ><b>&copy; {index.data.title}</b>. 2025</span
  >
  <Socials imageClass="w-15 sm:w-16 xl:w-18" class="flex flex-row" />
</Container>
