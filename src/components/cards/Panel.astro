---
import { parseHTML } from "linkedom";
import { flexImages } from "~/lib/processHTML";
const { title } = Astro.props;

const { document } = parseHTML(await Astro.slots.render("image"));

flexImages(document.querySelectorAll("img"));
---

<div
  class="flex flex-col items-center gap-3 sm:max-w-1/2 sm:flex-[40%] sm:gap-5 xl:max-w-1/3 xl:flex-[30%]"
>
  <div class="flex h-70 rounded-sm contain-paint md:h-95">
    <Fragment set:html={document} />
  </div>

  <h4 class="font-serif text-2xl">{title}</h4>
</div>
