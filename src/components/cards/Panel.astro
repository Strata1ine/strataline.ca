---
import { parseHTML } from "linkedom";
import { flexImages } from "~/util/processHTML";
const { title } = Astro.props;

const html = await Astro.slots.render("default");
const { document } = parseHTML(html);

flexImages(document.querySelectorAll("img"));
---

<div
  class="flex items-center flex-col sm:max-w-1/2 xl:max-w-1/3 sm:flex-[40%] xl:flex-[30%] gap-6"
>
  <div class="flex h-70 rounded-sm contain-paint md:h-95">
    <Fragment set:html={document} />
  </div>
  <h4 class="font-serif text-2xl font-semibold">{title}</h4>
</div>
