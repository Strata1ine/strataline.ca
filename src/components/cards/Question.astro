---
const { title, description, i = 1 } = Astro.props;
---

<div>
  <div class="flex items-baseline gap-4 mb-1">
    <h4 class="text-accent-dark font-serif text-6xl font-bold">o{i}</h4>
    <h5 class="font-serif text-xl font-semibold">{title}</h5>
  </div>
  <p class="font-sans text-base">{description}</p>
</div>
