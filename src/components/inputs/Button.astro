---
import clsx from "clsx";
const { as = "a", class: customClass, ...slot } = Astro.props;
const Tag = as;
---

<Tag
  class={clsx(
    `bg-white table border-black rounded-lg border-1 font-serif font-bold py-2 px-5 xl:py-[.6rem] xl:px-[1.4rem] text-lg`,

    customClass,
  )}
  {...slot}
>
  <slot />
</Tag>
