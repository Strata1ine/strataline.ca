---
import clsx from "clsx";

export enum ButtonVariant {
  Outline,
  Fill,
}

export const buttonMap = {
  [ButtonVariant.Outline]: "bg-white border-black border-1",
  [ButtonVariant.Fill]: "bg-accent",
};

const {
  as = "a",
  class: customClass,
  variant = ButtonVariant.Outline,
  ...slot
} = Astro.props;
const Tag = as;
---

<Tag
  class={clsx(
    `table rounded-lg font-serif font-bold py-2 px-5 xl:py-[.6rem] xl:px-[1.4rem] text-lg`,
    buttonMap[variant],
    customClass,
  )}
  {...Tag == "a" && {
    rel: "noopener noreferrer",
  }}
  {...slot}
>
  <slot />
</Tag>
