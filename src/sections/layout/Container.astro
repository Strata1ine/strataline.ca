---
import { cn } from '@/frontend/utils';
import { cva, type VariantProps } from 'class-variance-authority';
export const containerVariants = cva('w-full md:mx-auto', {
	variants: {
		variant: {
			inner: 'max-w-inner px-inset',
			outer: 'max-w-outer px-inset',
			display: 'max-w-[calc(var(--spacing-outer-span)+30rem)]',
		},
	},
});

interface Props {
	class?: string | string[];
	variant?: VariantProps<typeof containerVariants>['variant'];
	as?: 'div' | 'nav';
}
const { variant, class: className, as: Tag = 'div' } = Astro.props;
const classArray = (Array.isArray(className) ? className : [className]).filter(Boolean);
---

<Tag class={cn(containerVariants({ variant }), ...classArray)}>
	<slot />
</Tag>
