{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@/*": [
        "src/components/*"
      ],
      "@sections/*": [
        "src/components/sections/*"
      ],
      "@interact/*": [
        "src/components/interact/*"
      ],
      "@actions/*": [
        "src/components/interact/actions/*"
      ],
      "@modals/*": [
        "src/components/interact/modals/*"
      ],
      "@fields/*": [
        "src/components/interact/fields/*"
      ],
      "@build/*": [
        "src/build/*"
      ],
      "@icons/*": [
        "src/icons/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ]
    }
  }
}
