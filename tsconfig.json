{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ],
    "paths": {
      "@sections/*": [
        "src/components/sections/*"
      ],
      "@interact/*": [
        "src/components/interact/*"
      ],
      "@actions/*": [
        "src/components/interact/actions/*"
      ],
      "@modals/*": [
        "src/components/interact/modals/*"
      ],
      "@fields/*": [
        "src/components/interact/fields/*"
      ],
      "@decor/*": [
        "src/components/decor/*"
      ],
      "@/*": [
        "src/components/*"
      ],
      "~/*": [
        "src/*"
      ]
    }
  }
}
